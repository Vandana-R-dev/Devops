 # List some of the commonly used shell commands ?
  ls – List files and directories
cd – Change directory
pwd – Print working directory
cp – Copy files and directories
mv – Move or rename files
rm – Remove files and directories
mkdir – Create directories
touch – Create empty files
cat – Display the content of files
echo – Print text to the terminal
grep – Search for patterns in files
find – Search for files
chmod – Change file permissions
ps – Display currently running processes
top – Show real-time system processes
kill – Terminate a process by its PID

# Write a simple shell script to list all processes 
 ps -ef

# Write a script to print only errors from a remote log
 curl url(error files stored path) |  grep 'ERROR'
 #!/bin/bash
ssh user@remote_host "cat /var/log/syslog" | grep -i "error"

